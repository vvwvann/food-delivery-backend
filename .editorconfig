# To learn more about .editorconfig see https://aka.ms/editorconfigdocs

# All files
[*]
indent_style = space

root = true

[*.{cs,xaml,xml,cpp}]
indent_size = 2
trim_trailing_whitespace = true

[*.{cs,cpp}]
csharp_new_line_before_open_brace = methods, types
dotnet_style_prefer_auto_properties = true:none
